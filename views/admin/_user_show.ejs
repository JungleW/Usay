<div class="row">
    <% if(user.username == me.username ){ %>
    <div class="col-md-4">
    <% }else{ %>
    <div class="col-md-12">
    <% } %>
      <!-- Profile Image -->
        <div class="box box-widget widget-user">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-aqua-active">
              <h3 class="widget-user-username"><%= user.username %></h3>
              <h5 class="widget-user-desc"><%= user.authority %> &amp; Ushare</h5>
            </div>
            <div class="widget-user-image">
              <img class="img-circle" src="<%= user.avatar %>" alt="User Avatar">
            </div>

            <% if(user.username == me.username || user.authority == "user"){ %>
            <div class="box-footer">
            <% if( user.authority == "user" ){ %>
              <div class="row">
                <div class="col-sm-4 border-right">
                  <div class="description-block">
                    <h5 class="description-header">3,200</h5>
                    <span class="description-text">SALES</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <!-- /.col -->
                <div class="col-sm-4 border-right">
                  <div class="description-block">
                    <h5 class="description-header">13,000</h5>
                    <span class="description-text">FOLLOWERS</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <!-- /.col -->
                <div class="col-sm-4">
                  <div class="description-block">
                    <h5 class="description-header">35</h5>
                    <span class="description-text">PRODUCTS</span>
                  </div>
                  <!-- /.description-block -->
                </div>
                <!-- /.col -->
              </div>
              <% } %>
                  <!-- /.row -->

              <% if(user.username == me.username){ %>
              <div class="row">
                <div class="col-sm-6">
                  <a href="javascript:edit()" class="btn btn-primary btn-block description-block"><b>编辑信息</b></a>
                </div>
                <div class="col-sm-6">
                  <a href="javascript:DGet('profile', 'resetPwd')" class="btn btn-primary btn-block description-block"><b>修改密码</b></a>
                </div>
              </div>
              <% } %>
            </div>
            <% } %>
          </div>
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">简介</h3>
              <div class="box-tools pull-right"></div>
            </div>
            <!-- /.box-header -->
            <div class="box-footer">
              <div class="row">
                <div class="col-sm-3"><h4>账号</h4></div>
                <div class="col-sm-9"><h4><%= user.username %></h4></div>
              </div>
              <div class="row">
                <div class="col-sm-3"><h4>昵称</h4></div>
                <div class="col-sm-9"><h4><%= user.nickname %></h4></div>
              </div>
              <div class="row">
                <div class="col-sm-3"><h4>个性签名</h4></div>
                <div class="col-sm-9"><h4><%= user.bio %></h4></div>
              </div>
            </div>
              <!-- /.mailbox-read-info -->
        </div>
          <!-- /.box -->
      </div>
        <!-- /.col -->
       <% if(user.username == me.username ){ %>
      <div class="col-md-8">
      <% }else{ %>
      <div class="col-md-12">
      <% } %>
        <div class="box box-warning">
          <div class="box-header with-border">
              <h3 class="box-title">情况预览</h3>
              <!-- /.box-tools -->
          </div>
          <!-- /.box-header -->
          <div class="box-body no-padding">
              <table class="table">
                <tbody><tr>
                  <th style="width: 10px">#</th>
                  <th style="width: 80px">名称</th>
                  <th>比例</th>
                  <th style="width: 70px">数量</th>
                </tr>
                <% for(var i=0,len=preview.length; i<len; i++){ %>
                <tr>
                  <td><%= i+1 %>.</td>
                  <td><%= preview[i].label %></td>
                  <td>
                    <div class="progress progress-xs">
                      <div class="progress-bar progress-bar-danger" style="width: <%= preview[i].prop %>%"></div>
                    </div>
                  </td>
                  <td><span class="badge bg-red"><%= preview[i].amount %></span></td>
                </tr>
                <% } %>
              </tbody></table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
<!-- /.col -->
</div>
<!-- /.row -->
