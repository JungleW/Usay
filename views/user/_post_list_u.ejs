<ul class="list-group" id="post_list">
     <% for(let i=0, len=postList.length; i<len; i++){ var post = postList[i]; %><!-- for1 -->
    <li class="list-group-item post-item">
        <h1 class="author"><%= post.created %></h1>
        <h1 class="author"> 
            <a href="/user/user_view?id=<%= post.poster._id %>"><img src="<%= post.poster.avatar %>"> 
            <%= post.poster.username %> 
            </a> 
            <a href="javascript:void(0)" class="delFavorite flr active link-no-decaration glyphicon glyphicon-heart" data-postid="<%= post._id %>"></a>
            <small><%= post.created %></small> 
        </h1> 
        <div class="content">
            <a href="/user/post_view?postId=<%= post._id %>">
                <span class="detail"><%= post.content %> </span>
                <div class="picture">
                    <% if(post.images){ %> 
                        <% for(let i=0, len=post.images.length; i<len; i++){ var image = post.images[i]; %><!-- for1-1 --><img src="<%= image.url %>" width="32%"><% } %><!-- end for1-1 -->
                     <% } %>

                </div>
            </a>
        </div> 
        <div class="bottom">
            <div class="show">
                <div class="show-list f-cb">
                    <span class="show-list-item"><i class="glyphicon glyphicon-comment"></i>
                    <% if(post.comments){ %><%=post.comments.length%><% }else{ %>0<%}%></span>                       
                    <span class="show-list-item"><i class="glyphicon glyphicon-heart"></i><% if(post.upvotes){ %><%=post.upvotes.length%><% }else{ %>0<%}%></span> </span>
                    <span class="show-list-item"><i class="glyphicon glyphicon-thumbs-up"></i>
                        <% if(post.favourites){ %><%=post.favourites.length%><% }else{ %>0<%}%></span> </span>
                </div>
            </div>
        </div>
    </li>
    <% } %>
</ul>

<div class="page">
    <ul class="pagination" id="m_pag">

    </ul>
</div>