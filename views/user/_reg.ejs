    <div class="module-1">
        <div class="page-header">
            <h1>注册
                <small></small>
            </h1>
        </div>        
        <form class="form-horizontal" method="post" role="form" id="regForm">
            <fieldset>
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="username">账号</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="username" name="username" placeholder="手机号/QQ/便于记忆的字符串">
                        <p class="help-block">你的账号，用于登录和显示</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="password">密码</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label" for="confirm_password">确认密码</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" id="confirm_password" name="confirm_password">
                    </div>
                </div>
                <div class="form-group hidden return-tip">
                    <div class="col-sm-offset-3 col-sm-9">
                        <label id="tip"></label>
                    </div>
                </div>
                <div class="form-group"> 
                    <div class="col-sm-offset-3 col-sm-10"> 
                        <button type="submit" id="submit" class="btn btn-primary">注册</button> 
                    </div> 
                </div>
            </fieldset>
        </form>
    </div>
